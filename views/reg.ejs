<%- include head %>
<form class="form-horizontal form-p" role="form" method="post">
	<fieldset>
		<legend>用户注册</legend>
		 <div class="form-group">
		    <label class="col-sm-2 control-label" for="name">用户名</label>
		    <div class="col-sm-4">
		      <input type="text" class="form-control" id="name" placeholder="name" name="name">
		     <!--  <p class="help-block">你的账户名称，用于登录和显示。</p> -->
		    </div>
		  </div>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="password">用户密码</label>
			<div class="col-sm-4">
				<input type="password" class="form-control" id="password" placeholder="password" name="password">
			</div>
		
		</div>
		<div class="form-group ">
			<label class="col-sm-2 control-label" for="password-repeat">重复输入</label>
			<div class="col-sm-4">
				<input type="password" class="form-control" id="password-repeat" placeholder="password"
				name="password-repeat">
			</div>
		</div>
		<div class="form-group">
		    <div class="col-sm-offset-2 col-sm-4">
		      <div class="checkbox">
		        <label>
		          <input type="checkbox"> Remember me
		        </label>
		      </div>
		    </div>
		  </div>
		<div class="form-actions col-sm-offset-2 col-sm-4">
			<button type="submit" class="btn  btn-block btn-primary">注册</button>
		</div>
	</fieldset>
</form>
<%- include footer %>
